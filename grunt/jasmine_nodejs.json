{
  "options": {
    "specNameSuffix": "spec.js",
    "helperNameSuffix": "helper.js",
    "useHelpers": false,
    "stopOnFailure": false,
    "reporters": {
      "console": {
        "colors": true,
        "cleanStack": 1,
        "verbosity": 3,
        "listStyle": "indent",
        "activity": false
      }
    }
  },

  "test": {
    "specs": ["<%=  paths.tests %> "]
  },

  "for_sublime_text": {
    "specs": ["<%=  paths.tests %> "],
    "options": {
      "reporters": {
        "tap": true
      }
    }
  }
}
